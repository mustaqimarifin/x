{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"ignore": [".next/*", "contentlayer/generated", "scripts", "node_modules"]
	},
	"files": {
		"ignore": [".next/*", "contentlayer/generated", "scripts", "node_modules"]
	},
	"linter": {
		"ignore": [".next/*", "contentlayer/generated", "scripts"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noBannedTypes": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"noChildrenProp": "off",
				"useExhaustiveDependencies": "warn"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"useConst": "off",
				"noUnusedTemplateLiteral": "off",
				"noNonNullAssertion": "off"
			}
		}
	}
}
